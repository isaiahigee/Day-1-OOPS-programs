#include<iostream>
#include <bits/stdc++.h>
using namespace std;
int main()
{
int i,a[10],n,min,max,sum=0,diff=0;
cout<<"ENTER NUMBER OF ENTRIES => ";
cin>>n;
for(i=0;i<n;i++)
{
cout<<"ENTER THE ENTRY "<<i+1<<" => ";
cin>>a[i];
}
for(i=0;i<n;i++)
{
cout<<a[i]<<" ";
}
cout<<"\nenter the mth max => ";
cin>>max;
cout<<"\nenter the nth min => ";
cin>>min;
cout<<"\nthe "<<max<<"th maximum number is => "<<a[n-max];
cout<<"\nthe "<<min<<"th minimum number is => "<<a[n-min];
sum=a[n-max] + a[n-min];
cout<<"sum is:"<<sum<<endl;
diff=a[n-max] - a[n-min];
cout<<"diff is :"<<diff<<endl;
}
